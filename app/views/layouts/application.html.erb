<!DOCTYPE html>
<html>

<head>

  <title>Your personal Files</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  
</head>
<body>

<div id="header">&nbsp;Your very personal File Hoster</div>

<div id="nav">
	<br><br>
	<a href="/" id="compact_<%= action_name %>_<%= controller_name %>">Compact Overview</a><br><br>
	<a href="<%= uploads_path %>" id="index_<%= action_name %>_<%= controller_name %>">Detailed Overview</a><br><br><br>
	<% if current_user %>
		<%= button_to 'Logout', application_logout_path(1) %><br>
		<a href="<%= edit_user_registration_url %>" id="edit_<%= action_name %>_<%= controller_name %>"><i>my account</i></a><bR><bR>
		<% if current_user.try(:admin?) %>
			<hr>
			<a href="<%= allusers_url %>" id="allusers_<%= action_name %>_<%= controller_name %>">Manage All Users</a>
		<% end %>
	<% end %>
</div>

<div id="main">
	<% if not notice.blank? %>
		<p class="notice"><%= notice %></p>
	<% end %>
	<% if not alert.blank? %>
		<p class="alert"><%= alert %></p>
	<% end %>

	<%= yield %>

</div>

</body>
</html>
