<h1>Your personal files</h1>

<table id="mainlist">

<% @uploads.each do |upload| %>

<tr><td class="entry_left">

    		<div class="filename"><%= upload.filename %></div>
    
		<div class="description">
			<%= upload.description %>
		</div>

		<b>
		<!--<div class="uploader">
			Uploaded by: <%= upload.uploader %>, <%= upload.uploaddate.strftime("%d/%m/%Y, %H:%M:%S") %>
		</div>

		<div class="filepath">
			Original Filepath: <%= upload.filepath %>
		</div>
    
		<div class="counter">
      			Download counter: <%= upload.counter %>
    		</div>-->
		</b>
		
	</td><td>
	
		<div class="uploader">
			Uploaded by: <%= upload.uploader %>, <%= upload.uploaddate.strftime("%d/%m/%Y, %H:%M:%S") %>
		</div>

		<div class="filepath">
			Original Filepath: <%= upload.filepath %>
		</div>
    
		<div class="counter">
      			Download counter: <%= upload.counter %>
    		</div>

	</td><td class="entry_right c">
	
		<br><%= button_to 'Download', 'downloads/' + upload.filename %><br>
		<%= link_to 'Edit', edit_upload_path(upload) %><br>
		<%= link_to 'Destroy', upload, :method => :delete, :data => { :confirm => 'Are you sure?' } %>

	</td></tr>

<tr><td colspan="3"><hr></td></tr>

<% end %>
</table>

